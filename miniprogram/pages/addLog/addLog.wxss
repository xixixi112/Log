.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.5;
  overflow: auto;
  padding: 20rpx 10rpx 40rpx 10rpx;
  border: 2rpx solid #ECECEC;
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  cursor: pointer;
  font-size: 40rpx;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10rpx;
  height: 80rpx;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 2rpx solid #ECECEC;
  border-left: none;
  border-right: none;
  z-index:999;
  /* background-color: #bfa; */
}

.container {
  border: 2rpx black solid;
  position: relative; 
  top: 80rpx; 
  left: 0; 
  width: 100%;
  height: 850rpx;
  background-color: rgb(224,224,224);
  /* background-color: rgba(244,244,244); */
  border-radius: 10rpx;
}
